---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import BlogPostHead from "@components/BlogPostHead.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@common/consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const firstPost = posts[0];
const morePosts = posts.slice(1);
const siteTitle = SITE_TITLE + "â€™s Blog";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={siteTitle}
      description={SITE_DESCRIPTION}
      image={firstPost.data.image?.url}
    />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li :global(time) {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <article>
          <BlogPostHead slug={firstPost.slug} {...firstPost.data} />
          <hr />
          {firstPost.data.description}
        </article>
      </section>
      <section>
        <h2>More posts</h2>
        <ul>
          {
            morePosts.map((post) => (
              <li>
                <FormattedDate date={post.data.pubDate} />
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
